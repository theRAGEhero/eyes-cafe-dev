# Eyes Café Platform - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# World Café Integration
WORLD_CAFE_API_URL=http://localhost:3005
WORLD_CAFE_DOMAIN=world-cafe.democracyroutes.com

# Database Configuration
# Option 1: PostgreSQL (Recommended)
DATABASE_URL="postgresql://eyes_cafe:dev_password@localhost:5432/eyes_cafe_dev"

# Option 2: SQLite (Quick setup alternative)
# DATABASE_URL="file:./dev.db"

# Redis Configuration
# Option 1: Redis (Recommended) 
REDIS_URL="redis://localhost:6379"

# Option 2: In-memory queue (Development only)
# USE_MEMORY_QUEUE=true

# AI APIs
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
BACKEND_PORT=3002
FRONTEND_PORT=3001
NODE_ENV=development

# Cross-Platform URLs
EYES_CAFE_DOMAIN=eyes-cafe.democracyroutes.com
BASE_DOMAIN=democracyroutes.com

# Session & Security
JWT_SECRET=your-dev-jwt-secret-here
SESSION_SECRET=your-dev-session-secret-here

# Development Features
ENABLE_DEBUG_LOGGING=true
ENABLE_API_DOCS=true
SKIP_AUTH_IN_DEV=true

# Analytics Service (Future)
PYTHON_ANALYTICS_URL=http://localhost:8001

# Report Generation
REPORTS_PATH=./reports
CHARTS_PATH=./charts
MAX_REPORT_SIZE_MB=50