{
  "name": "eyes-cafe-platform",
  "version": "1.0.0",
  "description": "Advanced conversation analysis platform for World Café sessions",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "analytics"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:analytics": "cd analytics && python main.py",
    
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:generate": "cd backend && npx prisma generate",
    "db:studio": "cd backend && npx prisma studio",
    "db:seed": "cd backend && npm run seed",
    "db:reset": "cd backend && npx prisma migrate reset",
    
    "test": "jest",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:build": "docker-compose build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "conversation-analysis",
    "world-cafe",
    "ai-analytics",
    "bias-detection",
    "polarization-analysis"
  ],
  "author": "Eyes Café Development Team",
  "license": "ISC"
}